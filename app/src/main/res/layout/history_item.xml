<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:background="@drawable/history_shape"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/rv_history_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/rv_read_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gdhagdjhah"
        android:textColor="#878585"
        app:layout_constraintTop_toBottomOf="@id/rv_history_text"
        app:layout_constraintLeft_toLeftOf="@id/rv_history_text"/>
    <ImageView
        android:id="@+id/rv_saved_img"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/saved2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/rv_history_text"
        app:layout_constraintBottom_toBottomOf="@id/rv_read_text"
        android:layout_marginRight="30dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>